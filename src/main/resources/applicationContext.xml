    <bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="entityManagerFactory"/>
        <property name="dataSource" ref="dataSource"/>
    </bean>
    
    <bean id="USBarbitrator" class="fi.wsnusbcollect.usb.USBarbitrator"/>
    <bean id="consoleHelper" class="fi.wsnusbcollect.console.ConsoleHelper"/>
    <bean id="console" class="fi.wsnusbcollect.console.Console"/>
    <bean id="nodeHandlerRegister" class="fi.wsnusbcollect.nodeManager.NodeHandlerRegister"/>
    
    <!-- Experiment related -->
    <bean id="experimentParameters" class="fi.wsnusbcollect.experiment.ExperimentParameters"/>
    <bean id="experimentInit" class="fi.wsnusbcollect.experiment.ExperimentInitImpl"/>
    <bean id="experimentCoordinator" class="fi.wsnusbcollect.experiment.ExperimentCoordinatorImpl"/>
    <bean id="experimentData2DB" class="fi.wsnusbcollect.experiment.ExperimentData2DB" scope="prototype"  />
</beans>
